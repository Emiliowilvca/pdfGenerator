{
	"compilerOptions": {
		"module": "ES6",
		"target": "ES6",
		"outDir": "./dist",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},

	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
